<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.User_Register"
    android:background="@drawable/gradient_background">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="25dp"
        android:scrollbars="vertical">

        <!-- CORREO -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/style_edit_text">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_correo"
                android:hint="@string/UserRegistro_et_correo"
                android:inputType="textEmailAddress"
                android:autofillHints="false"
                android:background="@drawable/style_edit_text"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- NOMBRE -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_edit_text">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_nombre"
                android:hint="@string/UserRegistro_et_nombre"
                android:inputType="text"
                android:autofillHints="false"
                android:background="@drawable/style_edit_text"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- APELLIDOS -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_edit_text">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_apellidos"
                android:hint="@string/UserRegistro_et_apellidos"
                android:inputType="text"
                android:autofillHints="false"
                android:background="@drawable/style_edit_text"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EDAD -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_edit_text">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_edad"
                android:hint="@string/UserRegistro_et_edad"
                android:inputType="number"
                android:autofillHints="false"
                android:background="@drawable/style_edit_text"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CONTRASEÃ‘A -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/style_edit_text"
            app:passwordToggleEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_pass"
                android:hint="@string/UserRegistro_et_pass"
                android:inputType="textPassword"
                android:autofillHints="false"
                android:background="@drawable/style_edit_text"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BOTON REGISTRAR -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/UsuarioRegistro_btn_registro"
            android:text="@string/UserRegistro_btn_registro"
            android:background="@drawable/style_button"
            android:textColor="@color/Color_Button_Texto"
            android:layout_marginTop="30dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>