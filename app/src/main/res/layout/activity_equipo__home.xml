<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.Equipo_Home">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#fff"
        android:padding="25dp">

        <!-- LL DATOS USUARIO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- IMAGEN DE PERFIL -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/EquipoHome_image_perfil"
                android:src="@drawable/ic_equipohome_perfil"
                android:scaleType="fitCenter"
                android:contentDescription="@string/EquipoHome_iv_perfil" />
            <!-- NOMBRE DE USUARIO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/EquipoHome_tv_user"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/EquipoHome_tv_user"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!-- LL FLOAT BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EquipoHome_fab_add"
                android:src="@drawable/ic_add"
                android:layout_margin="16dp"
                app:borderWidth="0dp"
                android:elevation="0dp"
                android:backgroundTint="@color/principal"
                android:contentDescription="@string/EquipoHome_fab_add" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EquipoHome_fab_edit"
                android:src="@drawable/ic_edit"
                android:layout_margin="16dp"
                app:borderWidth="0dp"
                android:elevation="0dp"
                android:backgroundTint="@color/principal"
                android:contentDescription="@string/EquipoHome_fab_edit" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EquipoHome_fab_exit"
                android:src="@drawable/ic_exit"
                android:layout_margin="16dp"
                app:borderWidth="0dp"
                android:elevation="0dp"
                android:backgroundTint="@color/principal"
                android:contentDescription="@string/EquipoHome_fab_exit" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <!-- LL ANUNCIOS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>