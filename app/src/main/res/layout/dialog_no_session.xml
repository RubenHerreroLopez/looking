<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="110dp"
    android:padding="7dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_box_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="7dp"
        android:background="@drawable/dialog_box_style">

        <!-- MENSAJE -->
        <TextView
            android:text="@string/DialogNoInicio_Error"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_dialog_nosession"
            android:layout_marginTop="8dp"/>

        <!-- BOTON OK -->
        <Button
            android:id="@+id/DialogNoInicio_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DialogNoInicio_btn_ok"
            android:layout_marginTop="6dp"
            android:background="@null"
            android:textColor="#32323F"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>