<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_list_anuncio">

        <!-- IMAGEN PERFIL EQUIPO -->
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:id="@+id/ListAnunciosUser_iv"
            android:src="@drawable/ic_perfil_equipo"
            android:scaleType="fitCenter"
            android:layout_marginEnd="10dp"/>

        <!-- LL DATOS ANUNCIO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- equipo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ListAnunciosUser_lbl_equipo"
                android:textSize="18sp"/>
            <!-- deporte -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ListAnunciosUser_lbl_deporte"
                android:textSize="18sp"/>
            <!-- municipio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ListAnunciosUser_lbl_municipio"
                android:textSize="18dp"/>
            <!-- posicion -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ListAnunciosUser_lbl_posicion"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
