<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.User_Registro"
    android:background="@drawable/gradient_background">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="25dp"
        android:scrollbars="vertical">

        <!-- CORREO -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_correo"
                android:hint="@string/UsuarioRegistro_et_correo"
                android:inputType="textEmailAddress"
                android:autofillHints="false"
                android:background="@drawable/edit_text_style"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- NOMBRE -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_nombre"
                android:hint="@string/UsuarioRegistro_et_nombre"
                android:inputType="text"
                android:autofillHints="false"
                android:background="@drawable/edit_text_style"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- APELLIDOS -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_apellidos"
                android:hint="@string/UsuarioRegistro_et_apellidos"
                android:inputType="text"
                android:autofillHints="false"
                android:background="@drawable/edit_text_style"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- EDAD -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_edad"
                android:hint="@string/UsuarioRegistro_et_edad"
                android:inputType="number"
                android:autofillHints="false"
                android:background="@drawable/edit_text_style"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- SEXO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="2dp"
                android:text="@string/UsuarioRegistro_tv_categoria"
                android:textSize="18sp" />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/UsuarioRegistro_rg_sexo"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/UsuarioRegistro_rb_masculino"
                    android:text="@string/UsuarioRegistro_rb_hombre"
                    android:layout_marginEnd="10dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/UsuarioRegistro_rb_femenino"
                    android:text="@string/UsuarioRegistro_rb_mujer" />

            </RadioGroup>
        </LinearLayout>

        <!-- USUARIO -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_usuario"
                android:hint="@string/UsuarioRegistro_et_usuario"
                android:inputType="text"
                android:autofillHints="false"
                android:background="@drawable/edit_text_style"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CONTRASEÃ‘A -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_style"
            app:passwordToggleEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/UsuarioRegistro_et_pass"
                android:hint="@string/UsuarioRegistro_et_pass"
                android:inputType="textPassword"
                android:autofillHints="false"
                android:background="@drawable/edit_text_style"
                android:layout_marginStart="10dp"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BOTON REGISTRAR -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/UsuarioRegistro_btn_registro"
            android:text="@string/UsuarioRegistro_btn_registro"
            android:background="@drawable/button_style"
            android:textColor="@color/Color_Button_Texto"
            android:layout_marginTop="30dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>